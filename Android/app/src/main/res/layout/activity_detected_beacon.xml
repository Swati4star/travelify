<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="tie.hackathon.travelguide.DetectedBeacon">


        <ImageView
            android:id="@+id/imag"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="0.5"
            android:contentDescription="@string/default_image_description"
            android:scaleType="centerCrop"
            android:src="@drawable/delhi" />

        <TextView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif-bold"
            android:padding="10dp"
            android:text="Delhi"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:fontFamily="sans-serif-light"
            android:padding="10dp"
            android:text="Also known as Bahai Temple, Lotus Temple is one of the finest crafted structures is in Delhi"
            android:textColor="#000000"
            android:textSize="25sp" />


    </LinearLayout>
</ScrollView>